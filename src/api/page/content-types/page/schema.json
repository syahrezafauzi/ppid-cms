{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "url": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "content": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    },
    "pdf": {
      "type": "component",
      "component": "page.pdf",
      "repeatable": true
    },
    "link": {
      "type": "component",
      "component": "widget.link",
      "repeatable": true
    },
    "order": {
      "type": "integer",
      "min": 1,
      "max": 255
    },
    "pages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::page.page"
    }
  }
}
